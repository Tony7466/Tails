#!/usr/bin/python3
import os
import gettext
import sys
import tempfile

from tailslib.greeter import get_greeter_variable_bool
import tca.config


def display_error_message_dialog():
    _ = gettext.gettext
    title = tca.config.LOCALIZED_APPLICATION_TITLE
    textlines = [
        _("You turned on Offline Mode in the Welcome Screen."),
        _("It is impossible to connect to Tor in Offline Mode."),
        _("To connect to Tor and the Internet, restart Tails without Offline Mode."),
    ]
    zenity = [
        "zenity",
        "--error",
        "--no-wrap",
        "--title",
        title,
        "--text",
        "\n".join(textlines),
    ]
    os.execvp(zenity[0], zenity)


def main():
    if not get_greeter_variable_bool("TAILS_NETWORK"):
        display_error_message_dialog()

    # Dump the current environment to a temporary file with '\0' as
    # separator between key-value pairs, so that we can read it back
    # in the child process.
    envfile = tempfile.NamedTemporaryFile(mode="w", delete=False,
                                          prefix="tca-env-")
    for key, value in os.environ.items():
        envfile.write("%s=%s\0" % (key, value))

    args = [
        "sudo", "-n", "/usr/local/lib/run-tca-in-netns", envfile.name,
    ] + sys.argv[1:]

    os.execvp(args[0], args)


if __name__ == "__main__":
    main()
